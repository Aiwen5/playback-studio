<form action="/save-album" method="POST">
  <input type="text" name="title" value="<%= metadata ? metadata.title : '' %>" required>
  <input type="text" name="artist" value="<%= metadata ? metadata.artist : '' %>" required>
  <input type="date" name="release_date" value="<%= metadata ? metadata.releaseDate : '' %>">
  <input type="hidden" name="image_url" value="<%= metadata ? metadata.thumbnail : '' %>">
  <img src="<%= metadata ? metadata.thumbnail : '' %>" alt="Album Cover">
  <button type="submit">Save</button>
</form>